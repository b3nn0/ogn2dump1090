{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: ogn2dump1090",
            "type": "python",
            "request": "launch",
            "program": "ogn2dump1090.py",
            "args": ["-a", "localhost:14581"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: ogn2dump1090 remote",
            "type": "python",
            "request": "attach",
            "host": "raspberrypi",
            "port": 3000,
            "pathMappings": [{
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/home/pi/ogn2dump1090"
            }],
            "justMyCode": false
        },
        {
            "name": "Python: Current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}